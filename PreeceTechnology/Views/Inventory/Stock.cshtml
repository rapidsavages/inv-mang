@model PreeceTechnology.Models.Inventory

<div class="container">
    <h1 class="mt-3">Stock</h1>
    <main>
        <form asp-action="Stock" method="post" class="  form-horizontal">
            <div class="row"> 
                <label asp-for="Name" class="control-label col-sm-3">Name: </label> 
                <input asp-for="Name" class="form-control col-sm-3" />
            </div> 
            <div class="row"> 
                <label asp-for="Description" class="control-label col-sm-3">Description: </label> 
                <input asp-for="Description" class="form-control col-sm-3" />
            </div> 
            <div class="row"> 
                <label class="control-label col-sm-3"> <span class="fa fa-check-square"></span>&nbsp; Currently In: </label>
                <input asp-for="InStock" class="form-control col-sm-3" />
            </div> 
            <div class="row">
                <label class="control-label col-sm-3"> <span class="fa fa-hashtag"></span>&nbsp; Stock Needed: </label>
                <input asp-for="NeedStock" class="form-control col-sm-3" />
            </div>
            <div class="row"> 
                <label class="control-label col-sm-3"> <span class="fa fa-object-group"></span>&nbsp; Stock Needs: </label>
                <input value="@ViewBag.Stock.ToString("C2")" readonly class="form-control col-sm-3" /> 
            </div> 
            <div class="row"> 
                <div class="col offset-sm-3 pl-0"> 
                    <button type="submit" class="btn btn-primary">submit</button> 
                    <a asp-action="Stock" class="btn btn-outline-secondary">Clear</a> 
                </div> 
            </div> 
        </form> 
    </main> 
</div>
